<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="main"  template="/WEB-INF/views/main.jsp">
        <!--extends="base.definition"-->

        <put-list-attribute name="angular">
            <add-attribute value="/resources/js/angular/angular-1.5.7.js"/>
            <add-attribute value="/resources/js/angular/angular-locale_en-gb.js"/>
            <add-attribute value="/resources/js/angular/angular-route.min.js"/>
        </put-list-attribute>

        <put-list-attribute name="controllers">
            <add-attribute value="/resources/js/main/controllers/mainController.js"/>
            <add-attribute value="/resources/js/main/controllers/searchController.js"/>
            <add-attribute value="/resources/js/main/controllers/gameController.js"/>
        </put-list-attribute>

        <put-list-attribute name="services">
            <add-attribute value="/resources/js/main/services/mainService.js"/>
            <add-attribute value="/resources/js/main/services/searchService.js"/>
            <add-attribute value="/resources/js/main/services/gameService.js"/>
        </put-list-attribute>

        <put-list-attribute name="application">
            <add-attribute value="/resources/js/main/mainApp.js"/>
        </put-list-attribute>

        <put-list-attribute name="custom_javascript">
            <add-attribute value="/resources/js/sockets/stomp.js"/>
            <add-attribute value="/resources/js/sockets/sockjs.js"/>
        </put-list-attribute>

    </definition>


</tiles-definitions>